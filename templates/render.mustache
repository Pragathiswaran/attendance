<style>
  #title 
  {
    font-size: 37px;
    font-family: Arial, sans-serif;
    display: inline-block;
  }
  .btn-group 
  {
    margin-left: 10px;
    display: inline-block;
  }
  .btn-group:first-child
   {
    margin-left: 0;
  }
  .btn-group:last-child
   {
    margin-right: 0;
  }
  .btn 
  {
    border-radius:4px;
    font-size:16px;
    color: white;
    border: none;
    padding-top:4px;
  }
  .btn:not(.dropdown-toggle)
  {
    border-radius:4px;
    font-weight:bold;
    font-size:16px;
    color: black;
    border: none;
  }
  .dropdown-menu
   {
    display: none;
    min-width: 200px; 
    max-height: 120px; 
    overflow-y: auto;
  }
.dropdown-menu li
 {
    display: block;
}
.dropdown-menu li a
 {
    display: block;
    padding: 6px 20px;
    text-decoration: none;
    color: #333;
}
.dropdown-menu li a:hover {
  background-color: #f5f5f5;
}
thead {
text-align: center;
background-color: #8b96a3;
color: white;
font-size: 17px; 
text-transform: capitalize;
}
tbody{
  font-size: 14px;
  text-align:center;
  text-transform: capitalize;
}
.search-text.no-match::placeholder{
    color: red; 
}
.filter-container{
  display: flex;
  justify-content: flex-end;
  margin: 20px;
}
.search-bar{
  max-width:300px;
  display:inline-flex;
}
.search-text{
  padding:6px;
  outline:none;
  border:1px solid #007bff;
  border-radius:5px 0 0 5px;
  transition:0.5s;
  background-color:rgba(0, 123, 255,0.1);
}
.search-text::placeholder{
  color:#007bff;
  padding:4px;
}
.search-text:focus{
  background-color:#fff;
}
.btn-search{
  width:35px;
  background-color:#007bff;
  outline:none;
  border:none;
  color:white;
  border-radius:0 5px 5px 0;
}
</style>


<div class="mb-4">
 <h1 id='title' class="mb-3"></h1>
  <div class="d-flex flex-row justify-content-between align-items-center" style="margin-top:15px;">
    <div>
      <div class="btn-group">
        <button class="btn btn-primary dropdown-toggle" type="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
          <i class="fa-solid fa-book-open"></i> Course <span class="caret"></span>
        </button>
        <ul class="dropdown-menu">
            {{#coursetitleData}}
            <li class="btn btn-value">{{coursenames}}</li>
            {{/coursetitleData}}
        </ul>
      </div>
  
      <div class="btn-group ml-1">
        <button class="btn btn-primary dropdown-toggle" type="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
          <i class="fa-brands fa-wpforms"></i> Report <span class="caret"></span>
        </button>
        <ul class="dropdown-menu">
            <li><button class="btn btn-options">Login</button></li>
            <li><button class="btn btn-options">Course</button></li>
            <li><button class="btn btn-options">Quiz</button></li>
            <li><button class="btn btn-options">Assignment</button></li>
        </ul>
      </div>
  
      <div class="btn-group ml-1 ">
        <button class="btn btn-primary dropdown-toggle " type="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false" >
          <i class="fa-solid fa-chart-simple"></i> Chart <span class="caret"></span>
          </button>
          <ul class="dropdown-menu">
              <li> <button class="btn btn-chart" onclick="location.href='{{piechart}}'">Pie Chart</button></li>
              <li><button class="btn btn-chart" onclick="location.href='{{barchart}}'">Bar Chart</button></li>
          </ul>
      </div>
  
  
      <div class="btn-group ml-1">
        <button class="btn btn-primary dropdown-toggle" type="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
          <i class="fa-solid fa-file-export"></i> Export <span class="caret"></span>
        </button>
        <ul class="dropdown-menu">
            <li><button class="btn btn-filepdf">PDF</button></li>
            <li><button class="btn btn-file" onclick="exportToExcel()">EXCEL</button></li>
            <li><button class="btn btn-file" onclick="copyTable()">COPY</button></li>
            <li><button class="btn btn-file" onclick="exportTocsv()">CSV</button></li>
            <li><button class="btn btn-file" onclick="printTable()">PRINT</button></li>
            <li><button class="btn btn-file" data-toggle="modal" data-target="#ModalCenter">EMAIL</button></li>
        </ul>
      </div>
    </div>
    <div class="search-bar">
      <input type="text" class="search-text" placeholder="Type to Filter . . ."> 
      <button class="btn btn-search fa fa-search" type="none"></button>
    </div>
  </div>
</div>

<!-- Modal -->
<div class="modal fade" id="ModalCenter" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLongTitle">Modal title</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        {{#modalform}}
          {{{modalform}}}
      {{/modalform}}
      </div>
      <div class="modal-footer">
        <br>
      </div>
    </div>
  </div>
</div>

<script src="https://cdnjs.cloudflare.com/ajax/libs/jspdf/1.3.4/jspdf.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/jspdf-autotable/3.5.13/jspdf.plugin.autotable.min.js"></script>
<script type="text/javascript" src="https://unpkg.com/xlsx@0.15.1/dist/xlsx.full.min.js"></script>
