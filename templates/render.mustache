<style>
  #title 
  {
    font-size: 50px;
    font-family: timesnewroman;
    display: inline-block;
  }
  #title:hover 
  {
    color: orangered;
  }
  .btn-group 
  {
    margin-left: 10px;
    display: inline-block;
  }
  .btn-group:first-child
   {
    margin-left: 0;
  }
  .btn-group:last-child
   {
    margin-right: 0;
  }
  .btn-search.fa.fa-search
   {
    width: 40px;
    display: flex;
    flex-direction: column;
    justify-content: center;
    gap: 10px;
    color:white;
  }
  .search
   {
    height: 35px;
    max-width: 300px;
    display: inline-flex;
    margin-left: 10px;
  }
  .search-text
   {
    padding: 10px;
    width: 220px;
    outline: none;
    border: 1px solid rgb(77, 77, 255);
    border-radius: 5px 0 0 5px;
    transition: 0.5s;
    background-color: rgb(77, 77, 255, 0.1);
  }
  .search-text::placeholder
   {
    color: rgb(77, 77, 255);
  }
  .search-text:focus
   {
    background: #fff;
  }
  .btn-search 
  {
    hight:35px;
    background-color: rgb(77, 77, 255);
    color: white;
    outline:none;
    border:none;
    border-rasius:0 5px 5px 0;
  }
  .btn 
  {
    border-radius:4px;
    font-weight:bold;
    font-size:16px;
    color: white;
    border: none;
  }
  .btn:not(.dropdown-toggle)
  {
    border-radius:4px;
    font-weight:bold;
    font-size:16px;
    color: black;
    border: none;
  }
  .dropdown-menu
   {
    display: none;
    min-width: 200px; 
    max-height: 120px; 
    overflow-y: auto;
  }
.dropdown-menu li
 {
    display: block;
}
.dropdown-menu li a
 {
    display: block;
    padding: 6px 20px;
    text-decoration: none;
    color: #333;
}
.dropdown-menu li a:hover {
  background-color: #f5f5f5;
}
</style>


<div class="mb-4">
 <h1 id='title' class="mb-3"></h1>
  <div class="d-flex flex-row justify-content-between align-items-center" style="margin-top:15px;">
    <div>
      <div class="btn-group">
        <button class="btn btn-warning dropdown-toggle" type="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
          <i class="fa-solid fa-book-open"></i> Course <span class="caret"></span>
        </button>
        <ul class="dropdown-menu">
            {{#coursetitleData}}
            <li><button class="btn btn-value">{{coursenames}}</button></li>
            {{/coursetitleData}}
        </ul>
      </div>
  
      <div class="btn-group ml-1">
        <button class="btn btn-warning dropdown-toggle" type="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
          <i class="fa-brands fa-wpforms"></i> Report <span class="caret"></span>
        </button>
        <ul class="dropdown-menu">
            <li><button class="btn btn-options">Login</button></li>
            <li><button class="btn btn-options">Course</button></li>
            <li><button class="btn btn-options">Quiz</button></li>
            <li><button class="btn btn-options">Assignment</button></li>
        </ul>
      </div>
  
      <div class="btn-group ml-1 ">
        <button class="btn btn-warning dropdown-toggle " type="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false" >
          <i class="fa-solid fa-chart-simple"></i> Chart <span class="caret"></span>
          </button>
          <ul class="dropdown-menu">
              <li> <button class="btn btn-options" onclick="location.href='{{chart}}'">Pie Chart</button></li>
              <li><button class="btn btn-options">Bar Chart</button></li>
          </ul>
      </div>
  
  
      <div class="btn-group ml-1">
        <button class="btn btn-warning dropdown-toggle" type="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
          <i class="fa-solid fa-file-export"></i> Export <span class="caret"></span>
        </button>
        <ul class="dropdown-menu">
            <li><button class="btn btn-filepdf">PDF</button></li>
            <li><button class="btn btn-file" onclick="exportToExcel()">EXCEL</button></li>
            <li><button class="btn btn-file" onclick="copyTable()">COPY</button></li>
            <li><button class="btn btn-file" onclick="exportTocsv()">CSV</button></li>
            <li><button class="btn btn-file" onclick="printTable()">PRINT</button></li>
            <li><button class="btn btn-file" onclick="location.href='{{emailurl}}'">EMAIL</button></li>
        </ul>
      </div>
    </div>
    <div class="search">
      <a href="#" title="Header" data-toggle="popover" data-trigger="hover" data-content="Some content">Hover over me</a>
      <input type="text" class="search-text" placeholder="Type to Filter . . ."> 
      <button class="btn btn-search fa fa-search" type="button"></button>
    </div>
  </div>
</div>

<table id="example" class="table table-bordered table-condensed">
</table>
<script src="https://cdnjs.cloudflare.com/ajax/libs/jspdf/1.3.4/jspdf.min.js"></script>
