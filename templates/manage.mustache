<!-- local/attendance/templates/activity_summary.mustache -->

<h3>{{#str}}activityreport, local_attendance{{/str}}</h3>
<table class="table table-bordered" style="width:100%">
    <thead>
        <tr>
            <th>{{#str}}userid, local_attendance{{/str}}</th>
            <th>{{#str}}coursename, local_attendance{{/str}}</th>
            <th>{{#str}}accesscount, local_attendance{{/str}}</th>
            <th>{{#str}}totaltimespent, local_attendance{{/str}}</th>
        </tr>
    </thead>
    <tbody>
        {{#users}}
        <tr>
            <td>{{userid}}</td>
            <td>{{course_name}}</td>
            <td>{{access_count}}</td> <!-- Adjusted for consistency -->
            <td>{{total_time_spent_formatted}}</td>
        </tr>
        {{/users}}
    </tbody>
</table>

<button type="button" class="btn btn-outline-primary">{{#str}}primarybutton, local_attendance{{/str}}</button>
