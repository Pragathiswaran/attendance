<?xml version="1.0" encoding="UTF-8" ?>
<XMLDB PATH="local/attendance/db" VERSION="20130407" COMMENT="XMLDB file for local attendance plugin"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:noNamespaceSchemaLocation="../../../lib/xmldb/xmldb.xsd"
>
    <TABLES>
        <TABLE NAME="local_attendance" COMMENT="each record is a attendance">
            <FIELDS>
                <FIELD NAME="id" TYPE="int" LENGTH="10" NOTNULL="true" SEQUENCE="false"/>
                <FIELD NAME="username" TYPE="text" NOTNULL="true" SEQUENCE="false"/>
                <FIELD NAME="date" TYPE="text" NOTNULL="true" SEQUENCE="false"/>
                <FIELD NAME="login" TYPE="text" NOTNULL="true" SEQUENCE="false"/>
                <FIELD NAME="logout" TYPE="text" NOTNULL="true" SEQUENCE="false"/>
                <FIELD NAME="timespend" TYPE="text" NOTNULL="true" SEQUENCE="false"/>
            </FIELDS>
            <KEYS>
                <KEY NAME="primary" TYPE="primary" FIELDS="id"/>
            </KEYS>
        </TABLE>
    </TABLES>
</XMLDB>
